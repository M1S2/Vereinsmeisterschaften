<dialogs:CustomDialog x:Class="Vereinsmeisterschaften.Controls.NewWorkspaceSettingsDialog"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                      xmlns:local="clr-namespace:Vereinsmeisterschaften.Controls"
                      xmlns:properties="clr-namespace:Vereinsmeisterschaften.Properties"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                      xmlns:helpers="clr-namespace:Vereinsmeisterschaften.Helpers"
                      mc:Ignorable="d" 
                      d:DesignHeight="450" d:DesignWidth="800"
                      xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                      x:Name="root"
                      Title="{Binding Title, ElementName=root}">

    <!-- Style taken from https://github.com/punker76/MahApps.Metro.CustomDialog.Sample/blob/master/TinyLittleMvvm/MahApps.CustomDialog.Sample/ChoiceDialogView.xaml -->
    <dialogs:CustomDialog.Style>
        <Style BasedOn="{StaticResource {x:Type dialogs:BaseMetroDialog}}" TargetType="{x:Type dialogs:CustomDialog}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type dialogs:CustomDialog}">
                        <Grid Background="{TemplateBinding Background}">
                            <Border FocusVisualStyle="{x:Null}" Focusable="False">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <ContentPresenter Grid.Row="0" Content="{TemplateBinding DialogTop}"/>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*"/>
                                            <ColumnDefinition Width="80*"/>
                                            <ColumnDefinition Width="5*"/>
                                        </Grid.ColumnDefinitions>
                                        <!--  Content area  -->
                                        <Grid Grid.Column="1" Margin="0,10,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" FontSize="{DynamicResource MahApps.Font.Size.Dialog.Title}" Foreground="{TemplateBinding Foreground}" Text="{TemplateBinding Title}" TextWrapping="Wrap"/>
                                            <ContentPresenter Grid.Row="1" Content="{TemplateBinding Content}" />
                                        </Grid>
                                    </Grid>
                                    <ContentPresenter Grid.Row="2" Content="{TemplateBinding DialogBottom}"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <EventTrigger.Actions>
                                    <BeginStoryboard Storyboard="{StaticResource MahApps.Storyboard.Dialogs.Show}"/>
                                </EventTrigger.Actions>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </dialogs:CustomDialog.Style>

    <dialogs:CustomDialog.DialogBottom>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Margin="0,20"
                    Content="{x:Static properties:Resources.OkString}" FontSize="{DynamicResource MahApps.Font.Size.Dialog.Button}"
                    Command="{Binding DialogResultAffirmativeCommand, ElementName=root}"
                    Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}"/>
            <Button Margin="20"
                    Content="{x:Static properties:Resources.CancelString}" FontSize="{DynamicResource MahApps.Font.Size.Dialog.Button}"
                    Command="{Binding DialogResultNegativeCommand, ElementName=root}"
                    Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}" />
        </StackPanel>
    </dialogs:CustomDialog.DialogBottom>

    <dialogs:CustomDialog.Content>
        <StackPanel Margin="0,10,0,0" Orientation="Vertical">
            <!-- New workspace folder -->
            <TextBlock Text="{x:Static properties:Resources.WorkspaceCreateNewDialogNewFolderString}" VerticalAlignment="Center"/>
            <local:FileFolderPathControl Margin="0,5,0,0"
                                         FileFolderSelectionMode="Folders"
                                         FileFolderPath="{Binding NewWorkspaceFolder, ElementName=root, ValidatesOnNotifyDataErrors=True}"
                                         Validation.ErrorTemplate="{StaticResource ControlTemplateValidationError}"/>

            <!-- Copy default templates -->
            <CheckBox Margin="0,30,0,0"
                      IsChecked="{Binding CopyDefaultTemplates, ElementName=root, ValidatesOnNotifyDataErrors=True}"
                      Validation.ErrorTemplate="{StaticResource ControlTemplateValidationError}"
                      Content="{x:Static properties:Resources.WorkspaceCreateNewDialogCopyDefaultTemplatesString}"
                      Style="{StaticResource MahApps.Styles.CheckBox.Win10}"/>

            <!-- Data import from old workspace -->
            <Expander Margin="0,30,0,0" IsExpanded="True"
                      Header="{x:Static properties:Resources.WorkspaceCreateNewDialogDataImportString}"
                      controls:ControlsHelper.ContentCharacterCasing="Normal">
                <StackPanel Orientation="Vertical" Margin="10">
                    <StackPanel Orientation="Vertical">
                        <!-- Previous workspace folder -->
                        <TextBlock VerticalAlignment="Center"
                                   Text="{x:Static properties:Resources.WorkspaceCreateNewDialogPreviousFolderString}"/>
                        <local:FileFolderPathControl FileFolderSelectionMode="Folders"
                                                     FileFolderPath="{Binding PreviousWorkspaceFolder, ElementName=root}"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <StackPanel.Style>
                            <Style TargetType="{x:Type StackPanel}">
                                <Setter Property="IsEnabled" Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PreviousWorkspaceFolder, ElementName=root}" Value="">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        
                        <!-- Copy competitions -->
                        <CheckBox Margin="0,10,0,0"
                                  IsChecked="{Binding CopyCompetitions, ElementName=root}"
                                  Content="{x:Static properties:Resources.WorkspaceCreateNewDialogCopyCompetitionsString}"
                                  Style="{StaticResource MahApps.Styles.CheckBox.Win10}"/>

                        <!-- Copy competition distance rules -->
                        <CheckBox IsChecked="{Binding CopyCompetitionDistanceRules, ElementName=root}"
                                  Content="{x:Static properties:Resources.WorkspaceCreateNewDialogCopyCompetitionDistanceRulesString}"
                                  Style="{StaticResource MahApps.Styles.CheckBox.Win10}"/>
                        
                        <!-- Copy templates -->
                        <CheckBox Margin="0,0,0,20"
                                  IsChecked="{Binding CopyTemplates, ElementName=root, ValidatesOnNotifyDataErrors=True}"
                                  Content="{x:Static properties:Resources.WorkspaceCreateNewDialogCopyTemplatesString}"
                                  Validation.ErrorTemplate="{StaticResource ControlTemplateValidationError}"
                                  Style="{StaticResource MahApps.Styles.CheckBox.Win10}"/>
                    </StackPanel>
                </StackPanel>
            </Expander>
        </StackPanel>
    </dialogs:CustomDialog.Content>
</dialogs:CustomDialog>
