<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:Vereinsmeisterschaften.Converters"
    xmlns:coreModels="clr-namespace:Vereinsmeisterschaften.Core.Models;assembly=Vereinsmeisterschaften.Core">

    <converters:EnumToLocalizedStringConverter x:Key="enumLocalizedStringConverter"/>

    <!-- Style for a ContentControl that displays an icon and text for the result types in the Content property -->
    <Style x:Key="ResultTypeWithIconStyle" TargetType="{x:Type ContentControl}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Path Margin="5,0" Width="50">
                            <Path.Style>
                                <Style TargetType="{x:Type Path}" BasedOn="{StaticResource IconStyleSwimmingIcons}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.Breaststroke}">
                                            <Setter Property="Data" Value="{StaticResource Geometry_Breaststroke}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.Freestyle}">
                                            <Setter Property="Data" Value="{StaticResource Geometry_Freestyle}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.Backstroke}">
                                            <Setter Property="Data" Value="{StaticResource Geometry_Backstroke}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.Butterfly}">
                                            <Setter Property="Data" Value="{StaticResource Geometry_Butterfly}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.Medley}">
                                            <Setter Property="Data" Value="{StaticResource Geometry_Medley}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.WaterFlea}">
                                            <Setter Property="Data" Value="{StaticResource Geometry_WaterFlea}"/>
                                            <Setter Property="Height" Value="20"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.MaxAgeCompetitions}">
                                            <Setter Property="Data" Value="{StaticResource Geometry_AccountTie}"/>
                                            <Setter Property="Height" Value="20"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.Overall}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                        <controls:FontIcon Glyph="&#xE734;" FontSize="20" Margin="5,0" Width="50" HorizontalAlignment="Center">
                            <controls:FontIcon.Style>
                                <Style TargetType="{x:Type controls:FontIcon}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.Overall}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </controls:FontIcon.Style>
                        </controls:FontIcon>
                        <TextBlock Text="{Binding Converter={StaticResource enumLocalizedStringConverter}}" VerticalAlignment="Center" FontSize="{StaticResource MediumFontSize}"/>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
