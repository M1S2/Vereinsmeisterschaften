    <!-- Style for a ContentControl that displays an icon and text for the swimming style in the Content property -->
    <Style x:Key="SwimmingStyleWithIconStyle" TargetType="{x:Type ContentControl}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="5,0" Width="50">
                            <Image.Style>
                                <Style TargetType="{x:Type Image}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:SwimmingStyles.Breaststroke}">
                                            <Setter Property="Source" Value="{StaticResource DrawingImage_Breaststroke}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:SwimmingStyles.Freestyle}">
                                            <Setter Property="Source" Value="{StaticResource DrawingImage_Freestyle}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:SwimmingStyles.Backstroke}">
                                            <Setter Property="Source" Value="{StaticResource DrawingImage_Backstroke}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:SwimmingStyles.Butterfly}">
                                            <Setter Property="Source" Value="{StaticResource DrawingImage_Butterfly}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:SwimmingStyles.Medley}">
                                            <Setter Property="Source" Value="{StaticResource DrawingImage_Medley}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:SwimmingStyles.WaterFlea}">
                                            <Setter Property="Source" Value="{StaticResource DrawingImage_WaterFlea}"/>
                                            <Setter Property="Height" Value="20"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <TextBlock Text="{Binding Converter={StaticResource enumLocalizedStringConverter}}" VerticalAlignment="Center" FontSize="{StaticResource MediumFontSize}"/>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Style for a ContentControl that displays an icon and text for the result types in the Content property -->
    <Style x:Key="ResultTypeWithIconStyle" TargetType="{x:Type ContentControl}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="5,0" Width="50">
                            <Image.Style>
                                <Style TargetType="{x:Type Image}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.Breaststroke}">
                                            <Setter Property="Source" Value="{StaticResource DrawingImage_Breaststroke}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.Freestyle}">
                                            <Setter Property="Source" Value="{StaticResource DrawingImage_Freestyle}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.Backstroke}">
                                            <Setter Property="Source" Value="{StaticResource DrawingImage_Backstroke}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.Butterfly}">
                                            <Setter Property="Source" Value="{StaticResource DrawingImage_Butterfly}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.Medley}">
                                            <Setter Property="Source" Value="{StaticResource DrawingImage_Medley}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.WaterFlea}">
                                            <Setter Property="Source" Value="{StaticResource DrawingImage_WaterFlea}"/>
                                            <Setter Property="Height" Value="20"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.Overall}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <controls:FontIcon Glyph="&#xE734;" FontSize="20" Margin="5,0" Width="50" HorizontalAlignment="Center">
                            <controls:FontIcon.Style>
                                <Style TargetType="{x:Type controls:FontIcon}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="{x:Static coreModels:ResultTypes.Overall}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </controls:FontIcon.Style>
                        </controls:FontIcon>
                        <TextBlock Text="{Binding Converter={StaticResource enumLocalizedStringConverter}}" VerticalAlignment="Center" FontSize="{StaticResource MediumFontSize}"/>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
