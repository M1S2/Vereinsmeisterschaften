<Page
    x:Class="Vereinsmeisterschaften.Views.AnalyticsPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:localControls="clr-namespace:Vereinsmeisterschaften.Controls"
    xmlns:converters="clr-namespace:Vereinsmeisterschaften.Converters"
    xmlns:models="clr-namespace:Vereinsmeisterschaften.Models"
    xmlns:properties="clr-namespace:Vereinsmeisterschaften.Properties"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="{StaticResource MediumLeftTopRightBottomMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <controls:FontIcon FontSize="40" Glyph="&#xE9D2;"/>
            <TextBlock Style="{StaticResource PageTitleStyle}" Text="{x:Static properties:Resources.AnalyticsPageTitle}" />
            <controls:FontIcon Margin="30,0,0,0"
                               FontSize="25" Glyph="&#xF167;"
                               Foreground="{DynamicResource MahApps.Brushes.Accent}"
                               ToolTip="{x:Static properties:Tooltips.TooltipPageInfoAnalyticsPage}"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1"
                      Visibility="{Binding IsMaximizedAnalyticsUserControlAvailable, Converter={StaticResource InvertedBoolVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding NormalSizedAnalyticsUserControls}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="{x:Type UserControl}">
                        <Setter Property="Margin" Value="5"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
        </ScrollViewer>

        <DockPanel Grid.Row="1"
                   Visibility="{Binding IsMaximizedAnalyticsUserControlAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
            <!-- Restore Layout button -->
            <Button DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="5,10"
                    Command="{Binding RestoreLayoutCommand}"
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}">
                <StackPanel Orientation="Horizontal">
                    <!-- Icon exit full screen -->
                    <controls:FontIcon FontSize="20" Glyph="&#xE73F;"/>
                    <TextBlock Text="{x:Static properties:Resources.RestoreLayoutString}"
                               VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>
            <ContentControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                            Content="{Binding MaximizedAnalyticsUserControl}"/>
        </DockPanel>
    </Grid>
</Page>
