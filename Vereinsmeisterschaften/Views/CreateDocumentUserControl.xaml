<UserControl x:Class="Vereinsmeisterschaften.Views.CreateDocumentUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vereinsmeisterschaften.Views"
             xmlns:properties="clr-namespace:Vereinsmeisterschaften.Properties"
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">

    <Border BorderBrush="{DynamicResource MahApps.Brushes.Accent}" BorderThickness="0.5,0">
        <StackPanel Orientation="Vertical"
                    Margin="{StaticResource SmallLeftTopRightBottomMargin}"
                    DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}">

            <!-- Button to create document -->
            <Button Command="{Binding CreateDocumentCommand}"
                    CommandParameter="{Binding DocumentType}">
                <Button.Style>
                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MahApps.Styles.Button.Square.Accent}">
                        <Setter Property="IsEnabled" Value="True"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDataAvailable}" Value="False">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsTemplateAvailable}" Value="False">
                                <Setter Property="IsEnabled" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <StackPanel Orientation="Vertical">
                    <controls:FontIcon Margin="10"
                                       FontSize="50"
                                       Glyph="{Binding ButtonIconGlyph}"/>
                    <TextBlock Margin="10"
                               HorizontalAlignment="Center"
                               Text="{Binding ButtonText}"
                               FontSize="{StaticResource MediumFontSize}"/>
                </StackPanel>
            </Button>

            <!-- Grid to overlay the success or warning messages (stacked) with the progress ring (only once is visible at the same time) -->
            <Grid MinHeight="90">
                <StackPanel Orientation="Vertical">
                    <!-- Success Message -->
                    <StackPanel Margin="0,10,0,0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="{x:Type StackPanel}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSuccessful}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsDataAvailable}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <ContentControl Template="{StaticResource ControlTemplateOkIndicator}"
                                        VerticalAlignment="Top"/>
                        <StackPanel Margin="5,0,0,0"
                                    Orientation="Vertical">
                            <TextBlock VerticalAlignment="Center"
                                       Text="{Binding SuccessText}"/>
                            <TextBlock Margin="0,5,0,0"
                                       VerticalAlignment="Center"
                                       Text="{Binding NumberCreatedDocuments, StringFormat={x:Static properties:Resources.NumberCreatedDocumentsString}}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding NumberCreatedDocuments}" Value="-1">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Button x:Name="btn_openDocument"
                                    Margin="0,5"
                                    Content="{x:Static properties:Resources.OpenString}"
                                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                                    Click="btn_openDocument_Click"
                                    ToolTip="{x:Static properties:Tooltips.TooltipOpenDocument}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- No data available warning -->
                    <StackPanel Margin="0,10,0,0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Visibility="{Binding IsDataAvailable, Converter={StaticResource InvertedBoolVisibilityConverter}}">
                        <ContentControl Template="{StaticResource ControlTemplateWarningIndicator}"/>
                        <TextBlock Margin="5,0,0,0"
                                   Text="{x:Static properties:Resources.NoDataAvailableWarningString}"/>
                    </StackPanel>

                    <!-- No template available warning -->
                    <StackPanel Margin="0,10,0,0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Visibility="{Binding IsTemplateAvailable, Converter={StaticResource InvertedBoolVisibilityConverter}}">
                        <ContentControl Template="{StaticResource ControlTemplateWarningIndicator}"/>
                        <TextBlock Margin="5,0,0,0"
                                   Text="{x:Static properties:Resources.NoTemplateAvailableWarningString}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Progress Ring -->
                <controls:ProgressRing Margin="0,10,0,0">
                    <controls:ProgressRing.Style>
                        <Style TargetType="{x:Type controls:ProgressRing}">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsRunning}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsDataAvailable}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </controls:ProgressRing.Style>
                </controls:ProgressRing>
            </Grid>

            <!-- Combobox and label for available item orderings -->
            <DockPanel LastChildFill="True">
                <DockPanel.Style>
                    <Style TargetType="{x:Type DockPanel}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding AvailableItemOrderings}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DockPanel.Style>

                <controls:FontIcon DockPanel.Dock="Left"
                                   VerticalAlignment="Top"
                                   Margin="0,15,0,0"
                                   Glyph="&#xE8CB;"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock Margin="10,10,10,0"
                               Text="{x:Static properties:Resources.SortString}"/>
                    <ComboBox Margin="10,0,10,0"
                              ItemsSource="{Binding AvailableItemOrderings}"
                              SelectedItem="{Binding ItemOrdering, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource enumLocalizedStringConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </DockPanel>            

            <!-- Combobox and label for available item filters -->
            <DockPanel LastChildFill="True">
                <DockPanel.Style>
                    <Style TargetType="{x:Type DockPanel}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding AvailableItemFilters}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DockPanel.Style>

                <controls:FontIcon DockPanel.Dock="Left"
                                   VerticalAlignment="Top"
                                   Margin="0,15,0,0"
                                   Glyph="&#xE71C;"/>
                <StackPanel Orientation="Vertical">
                    <TextBlock Margin="10,10,10,0"
                               Text="{x:Static properties:Resources.FilterModeString}"/>
                    <ComboBox Margin="10,0,10,0"
                              ItemsSource="{Binding AvailableItemFilters}"
                              SelectedItem="{Binding ItemFilter, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource enumLocalizedStringConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <!-- Dynamic control to edit the filter parameter -->
                    <ContentControl Margin="10,5,10,0"
                                    Content="{Binding ItemFilter}"
                                    ContentTemplateSelector="{Binding FilterParameterEditorTemplateSelector}"/>
                </StackPanel>
            </DockPanel>
        </StackPanel>
    </Border>
</UserControl>
