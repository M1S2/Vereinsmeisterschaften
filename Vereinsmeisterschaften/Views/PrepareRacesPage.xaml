<Page
    x:Class="Vereinsmeisterschaften.Views.PrepareRacesPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:properties="clr-namespace:Vereinsmeisterschaften.Properties"
    xmlns:viewModels="clr-namespace:Vereinsmeisterschaften.ViewModels"
    xmlns:coreModels="clr-namespace:Vereinsmeisterschaften.Core.Models;assembly=Vereinsmeisterschaften.Core"
    xmlns:converters="clr-namespace:Vereinsmeisterschaften.Converters"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    Dialog:DialogParticipation.Register="{Binding}"
    xmlns:dd="urn:gong-wpf-dragdrop"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    
    <Page.Resources>
        <DataTemplate x:Key="DefaultDropHintTemplate" DataType="{x:Type dd:DropHintData}">
            <Border x:Name="DropHintRootBorder">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding HintText}" TextWrapping="Wrap" Foreground="White"/>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=HintState}" Value="Active">
                    <Setter TargetName="DropHintRootBorder" Property="Background" Value="#5B008000" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=HintState}" Value="Error">
                    <Setter TargetName="DropHintRootBorder" Property="Background" Value="{StaticResource BrushError}" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- Style that removes all effects (e.g. mouse over, highlight color ...) from the toggle button -->
        <Style x:Key="PlainToggleButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="AvailableHighlightPersonStartModes">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="viewModels:HighlightPersonStartModes"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <SolidColorBrush x:Key="BrushHighlight">Orange</SolidColorBrush>

        <converters:InvertedBooleanToVisibilityConverter x:Key="InvertedBoolVisibilityConverter"/>
    </Page.Resources>

    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
    
    <Grid Margin="{StaticResource MediumLeftTopRightBottomMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Page title -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center">
            <controls:FontIcon FontSize="40" Glyph="&#xE7C1;"/>
            <TextBlock Style="{StaticResource PageTitleStyle}" Text="{x:Static properties:Resources.PrepareRacesPageTitle}" />
        </StackPanel>

        <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

        <!-- Buttons to manage the race variants -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,10,0,10" VerticalAlignment="Top">
            <!-- Calculate races button -->
            <Button Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Command="{Binding CalculateCompetitionRacesCommand}">
                <StackPanel Orientation="Horizontal">
                    <controls:FontIcon FontSize="20" Glyph="&#xE7C1;"/>
                    <TextBlock Text="{x:Static properties:Resources.CalculateCompetitionRacesString}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>

            <!-- Add race variant button -->
            <Button Margin="10,0,0,0" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Command="{Binding AddNewRaceVariantCommand}">
                <StackPanel Orientation="Horizontal">
                    <controls:FontIcon FontSize="20" Glyph="&#xE710;"/>
                    <TextBlock Text="{x:Static properties:Resources.AddRaceVariantString}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>

            <!-- Remove race variant button -->
            <Button Margin="10,0,0,0" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Command="{Binding RemoveRaceVariantCommand}">
                <StackPanel Orientation="Horizontal">
                    <controls:FontIcon FontSize="20" Glyph="&#xE738;"/>
                    <TextBlock Text="{x:Static properties:Resources.RemoveRaceVariantString}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>

            <!-- Reorder race variants button -->
            <Button Margin="10,0,0,0" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Command="{Binding ReorderRaceVariantsCommand}">
                <StackPanel Orientation="Horizontal">
                    <controls:FontIcon FontSize="20" Glyph="&#xE8CB;"/>
                    <TextBlock Text="{x:Static properties:Resources.ReorderRaceVariantsString}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
        
        <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
        <!-- Score -->
        <Expander Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Expander.Style>
                <Style TargetType="{x:Type Expander}" BasedOn="{StaticResource MahApps.Styles.Expander}">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding AreRacesAvailable}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CurrentCompetitionRaceIsValid}" Value="False">
                            <Setter Property="controls:HeaderedControlHelper.HeaderBackground" Value="{StaticResource BrushError}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Expander.Style>

            <Expander.Header>
                <DockPanel VerticalAlignment="Center" LastChildFill="False">
                    <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                        <TextBlock Text="{x:Static properties:Resources.CalculatedScoreString}" VerticalAlignment="Center"/>
                        <TextBlock Margin="5,0,0,0" Text="{Binding CurrentCompetitionRace.Score, StringFormat={}{0:N2}%}" FontSize="{StaticResource LargeFontSize}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                        <!-- At least one race is invalid -->
                        <Grid Visibility="{Binding CurrentCompetitionRace.IsValid, Converter={StaticResource InvertedBoolVisibilityConverter}}"
                              ToolTip="{x:Static properties:Resources.InvalidRacesString}">
                            <controls:FontIcon FontSize="20" Glyph="&#xE7C1;"/>
                            <controls:FontIcon FontSize="20" Glyph="&#xEA83;" Margin="0,5,0,0"/>
                        </Grid>

                        <!-- There are not assigned starts -->
                        <Grid Margin="5,0,0,0" Visibility="{Binding IsValid_AllStartsAssigned, Converter={StaticResource InvertedBoolVisibilityConverter}}"
                              ToolTip="{x:Static properties:Resources.NotAssignedStartsString}">
                            <controls:FontIcon FontSize="20" Glyph="&#xE77B;"/>
                            <controls:FontIcon FontSize="10" Glyph="&#xE712;" Margin="0,17,0,0"/>
                        </Grid>
                    </StackPanel>
                </DockPanel>
            </Expander.Header>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static properties:Resources.ScoreSingleStartsString}"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentCompetitionRace.ScoreSingleStarts, StringFormat={}{0:N2}%}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static properties:Resources.ScoreSameStyleSequenceString}"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentCompetitionRace.ScoreSameStyleSequence, StringFormat={}{0:N2}%}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="{x:Static properties:Resources.ScorePersonStartPausesString}"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentCompetitionRace.ScorePersonStartPauses, StringFormat={}{0:N2}%}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="{x:Static properties:Resources.ScoreStyleOrderString}"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentCompetitionRace.ScoreStyleOrder, StringFormat={}{0:N2}%}"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="{x:Static properties:Resources.ScoreStartGendersString}"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CurrentCompetitionRace.ScoreStartGenders, StringFormat={}{0:N2}%}"/>
            </Grid>
        </Expander>

        <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
        <!-- Displayed variant -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom">
            <ComboBox HorizontalAlignment="Left" Width="225"
                      ItemsSource="{Binding AllCompetitionRaces}"
                      SelectedValue="{Binding CurrentVariantID}"
                      SelectedValuePath="VariantID"
                      HorizontalContentAlignment="Stretch">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ComboBoxItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ComboBox.ItemContainerStyle>
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="False">
                            <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:Resources.VariantString}"/>
                            <TextBlock DockPanel.Dock="Left" Margin="5,0,0,0" Text="{Binding VariantID, StringFormat=#{0}}"/>
                            <TextBlock DockPanel.Dock="Left" Text="{Binding Score, StringFormat=({0:N2}%)}" Margin="5,0,0,0"/>

                            <!-- Show filled pin for element that should be kept during race calculation -->
                            <Grid DockPanel.Dock="Right" Margin="0,0,10,0" Visibility="{Binding KeepWhileRacesCalculation, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <!-- Pin empty-->
                                <controls:FontIcon FontSize="15" Glyph="&#xE840;"/>
                                <!-- Fill for pin -->
                                <controls:FontIcon FontSize="15" Glyph="&#xE842;"/>
                            </Grid>

                            <!-- Show filled start for persisted element -->
                            <controls:FontIcon DockPanel.Dock="Right" Margin="0,0,10,0" FontSize="15" Glyph="&#xE735;" Visibility="{Binding IsPersistent, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </DockPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Toggle button for IsPersistent of current competition race -->
            <ToggleButton Margin="10,0,0,0" IsChecked="{Binding CurrentCompetitionRaceIsPersistent}" Style="{StaticResource PlainToggleButtonStyle}"
                          Visibility="{Binding AreRacesAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                <controls:FontIcon FontSize="25">
                    <controls:FontIcon.Style>
                        <Style TargetType="{x:Type controls:FontIcon}">
                            <!-- Star empty -->
                            <Setter Property="Glyph" Value="&#xE734;"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentCompetitionRaceIsPersistent}" Value="True">
                                    <!-- Star filled -->
                                    <Setter Property="Glyph" Value="&#xE735;"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <!-- Star filled -->
                                    <Setter Property="Glyph" Value="&#xE735;"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </controls:FontIcon.Style>
                </controls:FontIcon>
            </ToggleButton>

            <!-- Toggle button for KeepWhileRacesCalculation of current competition race -->
            <ToggleButton Margin="10,0,0,0" IsChecked="{Binding CurrentCompetitionRace.KeepWhileRacesCalculation}">
                <ToggleButton.Style>
                    <Style TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource PlainToggleButtonStyle}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentCompetitionRaceIsPersistent}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding AreRacesAvailable}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ToggleButton.Style>
                <Grid>
                    <!--Pin empty-->
                    <controls:FontIcon FontSize="25" Glyph="&#xE840;"/>
                    <!--Fill for pin-->
                    <controls:FontIcon FontSize="25" Glyph="&#xE842;">
                        <controls:FontIcon.Style>
                            <Style TargetType="{x:Type controls:FontIcon}">
                                <Setter Property="Foreground" Value="Transparent"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentCompetitionRace.KeepWhileRacesCalculation}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Text}"/>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Text}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </controls:FontIcon.Style>
                    </controls:FontIcon>
                </Grid>
            </ToggleButton>
        </StackPanel>

        <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
        <!-- View for current competition races -->
        <ListBox Grid.Row="3" Margin="0,10" ItemsSource="{Binding CurrentCompetitionRace.Races}"
                 dd:DragDrop.IsDragSource="True" dd:DragDrop.IsDropTarget="True" dd:DragDrop.UseDefaultDragAdorner="True"
                 BorderBrush="{StaticResource MahApps.Brushes.Gray3}" BorderThickness="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel LastChildFill="True">
                        <Border DockPanel.Dock="Left" Padding="7" Width="200" BorderBrush="{DynamicResource MahApps.Brushes.Gray3}" BorderThickness="1">
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsValid}" Value="False">
                                            <Setter Property="Background" Value="{StaticResource BrushError}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <DockPanel VerticalAlignment="Center" LastChildFill="False">
                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                    <TextBlock Width="40" Text="{Binding Distance, StringFormat={}{0}m}" FontSize="{StaticResource MediumFontSize}" VerticalAlignment="Center"/>
                                    <TextBlock Margin="5,0,0,0" Text="{Binding Style, Converter={StaticResource enumLocalizedStringConverter}}" FontSize="{StaticResource MediumFontSize}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                                    <!-- No starts available -->
                                    <controls:FontIcon FontSize="20" Glyph="&#xE75D;"
                                                       Visibility="{Binding IsValid_StartsAvailable, Converter={StaticResource InvertedBoolVisibilityConverter}}"
                                                       ToolTip="{x:Static properties:Resources.RaceEmptyString}"/>

                                    <!-- distances mismatch -->
                                    <Grid Visibility="{Binding IsValid_SameDistances, Converter={StaticResource InvertedBoolVisibilityConverter}}"
                                          ToolTip="{x:Static properties:Resources.RaceDistancesMismatchString}">
                                        <controls:FontIcon FontSize="20" Glyph="&#xECC6;"/>
                                        <controls:FontIcon FontSize="20" Glyph="&#xEA83;" Margin="3,5,0,0"/>
                                    </Grid>
                                    
                                    <!-- styles mismatch -->
                                    <controls:FontIcon FontSize="20" Glyph="&#xE7BA;" Margin="5,0,0,0"
                                                       Visibility="{Binding IsValid_SameStyles, Converter={StaticResource InvertedBoolVisibilityConverter}}"
                                                       ToolTip="{x:Static properties:Resources.RaceStylesMismatchString}"/>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                        <ListBox x:Name="InnerListBoxRace"
                                 ItemsSource="{Binding Starts}"                                 
                                 dd:DragDrop.IsDragSource="True"
                                 dd:DragDrop.IsDropTarget="True"
                                 dd:DragDrop.UseDefaultDragAdorner="True"
                                 dd:DragDrop.SelectDroppedItems="False"
                                 dd:DragDrop.UseDropTargetHint="True"
                                 dd:DragDrop.DropHandler="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Page}, Path=DataContext.DropAllowedHandlerObj}"
                                 dd:DragDrop.DropHintDataTemplate="{StaticResource DefaultDropHintTemplate}"
                                 PreviewMouseWheel="InnerListBoxRace_PreviewMouseWheel">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel IsItemsHost="True" Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="7" Width="275" BorderBrush="{DynamicResource MahApps.Brushes.Accent}" BorderThickness="1">
                                        <Border.Style>
                                            <Style TargetType="{x:Type Border}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCompetitionObjAssigned}" Value="False">
                                                        <Setter Property="Background" Value="{StaticResource BrushError}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource BrushHighlight}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Border.ToolTip>
                                            <TextBlock>
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}m {1}" FallbackValue="{x:Static properties:Resources.PersonStartCompetitionObjMissingString}">
                                                        <Binding Path="CompetitionObj.Distance" />
                                                        <Binding Path="CompetitionObj.SwimmingStyle" Converter="{StaticResource enumLocalizedStringConverter}" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Border.ToolTip>
                                        <DockPanel LastChildFill="True" Background="Transparent">  <!-- Background = Transparent seems to be important here to show the tooltip of the parent border correctly over empty space -->
                                            <!-- competition missing -->
                                            <controls:FontIcon DockPanel.Dock="Right" FontSize="20" Glyph="&#xF140;" Margin="5,0,0,0"
                                                               Visibility="{Binding IsCompetitionObjAssigned, Converter={StaticResource InvertedBoolVisibilityConverter}}"
                                                               ToolTip="{x:Static properties:Resources.PersonStartCompetitionObjMissingString}"/>
                                            <TextBlock FontSize="{StaticResource MediumFontSize}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} {1}">
                                                        <Binding Path="PersonObj.FirstName" />
                                                        <Binding Path="PersonObj.Name" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
        <!-- Parking lot for PersonStarts -->
        <ListBox Grid.Row="3" Grid.Column="1" Margin="10,10,0,10" ItemsSource="{Binding NotAssignedStarts}"
                 dd:DragDrop.IsDragSource="True"
                 dd:DragDrop.IsDropTarget="True"
                 dd:DragDrop.UseDefaultDragAdorner="True"
                 dd:DragDrop.UseDropTargetHint="True"
                 dd:DragDrop.DropHandler="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Page}, Path=DataContext.DropAllowedHandlerParkingLotObj}"
                 BorderBrush="{StaticResource MahApps.Brushes.Gray3}" BorderThickness="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Padding="7" Width="150" BorderBrush="{DynamicResource MahApps.Brushes.Accent}" BorderThickness="1">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsCompetitionObjAssigned}" Value="False">
                                        <Setter Property="Background" Value="{StaticResource BrushError}" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource BrushHighlight}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="{StaticResource MediumFontSize}" VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Visibility="{Binding IsCompetitionObjAssigned, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0}m {1}">
                                        <Binding Path="CompetitionObj.Distance" />
                                        <Binding Path="Style" Converter="{StaticResource enumLocalizedStringConverter}"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <controls:FontIcon FontSize="20" Glyph="&#xF140;" Margin="5,0,0,0"
                                               Visibility="{Binding IsCompetitionObjAssigned, Converter={StaticResource InvertedBoolVisibilityConverter}}"
                                               ToolTip="{x:Static properties:Resources.PersonStartCompetitionObjMissingString}"/>
                            <TextBlock FontSize="{StaticResource MediumFontSize}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="PersonObj.FirstName" />
                                        <Binding Path="PersonObj.Name" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
        <!-- Edit competition races and highlight controls-->
        <DockPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,10" LastChildFill="False">
            <!-- Add empty race button -->
            <Button DockPanel.Dock="Left" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Command="{Binding AddNewRaceCommand}">
                <StackPanel Orientation="Horizontal">
                    <controls:FontIcon FontSize="20" Glyph="&#xE710;"/>
                    <TextBlock Text="{x:Static properties:Resources.AddEmptyRaceString}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>

            <!-- Cleanup races button -->
            <Button DockPanel.Dock="Left" Margin="10,0,0,0" Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Command="{Binding CleanupRacesCommand}">
                <StackPanel Orientation="Horizontal">
                    <controls:FontIcon FontSize="20" Glyph="&#xEA99;"/>
                    <TextBlock Text="{x:Static properties:Resources.CleanupRacesString}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>

            <!-- Highlight mode controls -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <TextBlock Text="{x:Static properties:Resources.HighlightModeString}" VerticalAlignment="Center"/>
                <ComboBox Margin="5,0,0,0" Width="150" ItemsSource="{Binding Source={StaticResource AvailableHighlightPersonStartModes}}" SelectedValue="{Binding HighlightPersonStartMode}" VerticalAlignment="Center">
                    <!-- https://www.codeproject.com/Articles/767834/WPF-Binding-to-an-enum-with-localization -->
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource enumLocalizedStringConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <ComboBox Margin="5,0,0,0" Width="250" VerticalAlignment="Center">
                    <ComboBox.Style>
                        <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource MahApps.Styles.ComboBox}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HighlightPersonStartMode}" Value="Person">
                                    <Setter Property="ItemsSource" Value="{Binding AvailablePersons}"/>
                                    <Setter Property="SelectedValue" Value="{Binding HighlightedPerson}"/>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding HighlightPersonStartMode}" Value="SwimmingStyle">
                                    <Setter Property="ItemsSource" Value="{Binding AvailableSwimmingStyles}"/>
                                    <Setter Property="SelectedValue" Value="{Binding HighlightedSwimmingStyle}"/>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding HighlightPersonStartMode}" Value="Gender">
                                    <Setter Property="ItemsSource" Value="{Binding Source={StaticResource AvailableGenders}}"/>
                                    <Setter Property="SelectedValue" Value="{Binding HighlightedGender}"/>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource enumLocalizedStringConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <controls:NumericUpDown Margin="5,0,0,0" Width="250" VerticalAlignment="Center"
                                        Value="{Binding HighlightedDistance}" Minimum="0">
                    <controls:NumericUpDown.Style>
                        <Style TargetType="{x:Type controls:NumericUpDown}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HighlightPersonStartMode}" Value="Distance">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </controls:NumericUpDown.Style>
                </controls:NumericUpDown>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
