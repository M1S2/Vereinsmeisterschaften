<Page
    x:Class="Vereinsmeisterschaften.Views.PrepareRacesPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:properties="clr-namespace:Vereinsmeisterschaften.Properties"
    xmlns:viewModels="clr-namespace:Vereinsmeisterschaften.ViewModels"
    xmlns:coreModels="clr-namespace:Vereinsmeisterschaften.Core.Models;assembly=Vereinsmeisterschaften.Core"
    xmlns:converters="clr-namespace:Vereinsmeisterschaften.Converters"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    Dialog:DialogParticipation.Register="{Binding}"
    xmlns:dd="urn:gong-wpf-dragdrop"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    
    <Page.Resources>
        <DataTemplate x:Key="DefaultDropHintTemplate" DataType="{x:Type dd:DropHintData}">
            <Border x:Name="DropHintRootBorder">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding HintText}" TextWrapping="Wrap" Foreground="White"/>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=HintState}" Value="Active">
                    <Setter TargetName="DropHintRootBorder" Property="Background" Value="{StaticResource BrushOkWithTransparency}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=HintState}" Value="Error">
                    <Setter TargetName="DropHintRootBorder" Property="Background" Value="{StaticResource BrushErrorWithTransparency}" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- Style that removes all effects (e.g. mouse over, highlight color ...) from the toggle button -->
        <Style x:Key="PlainToggleButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="AvailableHighlightPersonStartModes">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="viewModels:HighlightPersonStartModes"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Page.Resources>

    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
    
    <Grid Margin="{StaticResource MediumLeftTopRightBottomMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Page title -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Center">
            <controls:FontIcon FontSize="40" Glyph="&#xE7C1;"/>
            <TextBlock Style="{StaticResource PageTitleStyle}" Text="{x:Static properties:Resources.PrepareRacesPageTitle}" />
            <controls:FontIcon Margin="30,0,0,0" FontSize="25" Glyph="&#xF167;" Foreground="{DynamicResource MahApps.Brushes.Accent}" ToolTip="{x:Static properties:Tooltips.TooltipPageInfoPrepareRacesPage}"/>
        </StackPanel>

        <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

        <!-- Buttons to manage the race variants -->
        <WrapPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,10,0,10" VerticalAlignment="Top">
            <!-- Calculate races button -->
            <Button Margin="0,0,10,0" Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Command="{Binding CalculateRacesVariantsCommand}"
                    ToolTip="{x:Static properties:Tooltips.TooltipRaceVariantsCalculate}">
                <StackPanel Orientation="Horizontal">
                    <controls:FontIcon FontSize="20" Glyph="&#xE7C1;"/>
                    <TextBlock Text="{x:Static properties:Resources.CalculateRacesVariantsString}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>

            <!-- Add race variant button -->
            <Button Margin="0,0,10,0" Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Command="{Binding AddNewRaceVariantCommand}"
                    ToolTip="{x:Static properties:Tooltips.TooltipRaceVariantAdd}">
                <StackPanel Orientation="Horizontal">
                    <controls:FontIcon FontSize="20" Glyph="&#xE710;"/>
                    <TextBlock Text="{x:Static properties:Resources.AddRaceVariantString}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>

            <!-- Copy race variant button -->
            <Button Margin="0,0,10,0" Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Command="{Binding CopyRaceVariantCommand}"
                    ToolTip="{x:Static properties:Tooltips.TooltipRaceVariantCopy}">
                <StackPanel Orientation="Horizontal">
                    <controls:FontIcon FontSize="20" Glyph="&#xE8C8;"/>
                    <TextBlock Text="{x:Static properties:Resources.CopyRaceVariantString}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>

            <!-- Reorder race variants button -->
            <Button Margin="0,0,10,0" Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Command="{Binding ReorderRaceVariantsCommand}"
                    ToolTip="{x:Static properties:Tooltips.TooltipRaceVariantsReorder}">
                <StackPanel Orientation="Horizontal">
                    <controls:FontIcon FontSize="20" Glyph="&#xE8CB;"/>
                    <TextBlock Text="{x:Static properties:Resources.ReorderRaceVariantsString}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>

            <!-- Remove race variant button -->
            <Button Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Background="{DynamicResource BrushError}"
                    Command="{Binding RemoveRaceVariantCommand}"
                    ToolTip="{x:Static properties:Tooltips.TooltipRaceVariantRemove}">
                <StackPanel Orientation="Horizontal">
                    <controls:FontIcon FontSize="20" Glyph="&#xE738;"/>
                    <TextBlock Text="{x:Static properties:Resources.RemoveRaceVariantString}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>
        </WrapPanel>
        
        <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
        <!-- Score -->
        <Expander Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                  Visibility="{Binding AreRacesVariantsAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Expander.Style>
                <Style TargetType="{x:Type Expander}" BasedOn="{StaticResource MahApps.Styles.Expander}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentRacesVariant.IsValid}" Value="False">
                            <Setter Property="controls:HeaderedControlHelper.HeaderBackground" Value="{StaticResource BrushErrorWithTransparency}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Expander.Style>

            <Expander.Header>
                <DockPanel VerticalAlignment="Center" LastChildFill="False">
                    <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                        <TextBlock Text="{x:Static properties:Resources.CalculatedRaceVariantScoreString}" VerticalAlignment="Center"/>
                        <TextBlock Margin="5,0,0,0" Text="{Binding CurrentRacesVariant.Score, StringFormat={}{0:N2}%}" FontSize="{StaticResource LargeFontSize}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                        <!-- At least one race is invalid -->
                        <Grid Visibility="{Binding CurrentRacesVariant.IsValid_AllRacesValid, Converter={StaticResource InvertedBoolVisibilityConverter}}"
                              ToolTip="{x:Static properties:Resources.InvalidRacesString}">
                            <controls:FontIcon FontSize="20" Glyph="&#xE7C1;"/>
                            <controls:FontIcon FontSize="20" Glyph="&#xEA83;" Margin="0,5,0,0"/>
                        </Grid>

                        <!-- There are not assigned starts -->
                        <Grid Margin="5,0,0,0" Visibility="{Binding CurrentRacesVariant.IsValid_AllStartsAssigned, Converter={StaticResource InvertedBoolVisibilityConverter}}"
                              ToolTip="{x:Static properties:Resources.NotAssignedStartsString}">
                            <controls:FontIcon FontSize="20" Glyph="&#xE77B;"/>
                            <controls:FontIcon FontSize="10" Glyph="&#xE712;" Margin="0,17,0,0"/>
                        </Grid>
                    </StackPanel>
                </DockPanel>
            </Expander.Header>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="{x:Static properties:Resources.ScoreSingleStartsString}"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentRacesVariant.ScoreSingleStarts, StringFormat={}{0:N2}%}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="{x:Static properties:Resources.ScoreSameStyleSequenceString}"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentRacesVariant.ScoreSameStyleSequence, StringFormat={}{0:N2}%}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="{x:Static properties:Resources.ScorePersonStartPausesString}"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentRacesVariant.ScorePersonStartPauses, StringFormat={}{0:N2}%}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="{x:Static properties:Resources.ScoreStyleOrderString}"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentRacesVariant.ScoreStyleOrder, StringFormat={}{0:N2}%}"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="{x:Static properties:Resources.ScoreStartGendersString}"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CurrentRacesVariant.ScoreStartGenders, StringFormat={}{0:N2}%}"/>

                <Expander Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5,0,0" IsExpanded="True"
                          controls:HeaderedControlHelper.HeaderBackground="{StaticResource BrushWarning}"
                          Visibility="{Binding CurrentRacesVariant.AreStartPausesSeverelyAffectedPersonsAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <!-- Warning icon -->
                            <controls:FontIcon Margin="5,0" Glyph="&#xE7BA;"/>
                            <TextBlock Text="{x:Static properties:Resources.PersonsWithShortPausesString}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Expander.Header>
                    <ItemsControl ItemsSource="{Binding CurrentRacesVariant.PersonStartPausesSeverelyAffectedPersons}"/>
                </Expander>
            </Grid>
        </Expander>

        <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
        <!-- Displayed variant -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom">
            <ComboBox HorizontalAlignment="Left" Width="250"
                      ItemsSource="{Binding AllRacesVariants}"
                      SelectedValue="{Binding CurrentVariantID}"
                      SelectedValuePath="VariantID"
                      HorizontalContentAlignment="Stretch">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ComboBoxItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ComboBox.ItemContainerStyle>
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="False">
                            <TextBlock DockPanel.Dock="Left" Text="{x:Static properties:Resources.VariantString}"/>
                            <TextBlock DockPanel.Dock="Left" Margin="5,0,0,0" Text="{Binding VariantID, StringFormat=#{0}}"/>
                            <TextBlock DockPanel.Dock="Left" Text="{Binding Score, StringFormat=({0:N2}%)}" Margin="5,0,0,0"/>

                            <!-- Show warning icon if element is not valid -->
                            <controls:FontIcon DockPanel.Dock="Right" Margin="0,0,10,0" FontSize="15" Glyph="&#xE7BA;"
                                               Visibility="{Binding IsValid, Converter={StaticResource InvertedBoolVisibilityConverter}}"
                                               ToolTip="{x:Static properties:Tooltips.TooltipRaceVariantContainsError}"/>
                            
                            <!-- Show filled pin for element that should be kept during race calculation -->
                            <Grid DockPanel.Dock="Right" Margin="0,0,10,0"
                                  Visibility="{Binding KeepWhileRacesCalculation, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  ToolTip="{x:Static properties:Tooltips.TooltipRaceVariantKeepWhileCalculation}">
                                <!-- Pin empty-->
                                <controls:FontIcon FontSize="15" Glyph="&#xE840;"/>
                                <!-- Fill for pin -->
                                <controls:FontIcon FontSize="15" Glyph="&#xE842;"/>
                            </Grid>

                            <!-- Show filled start for persisted element -->
                            <controls:FontIcon DockPanel.Dock="Right" Margin="0,0,10,0" FontSize="15" Glyph="&#xE735;"
                                               Visibility="{Binding IsPersistent, Converter={StaticResource BooleanToVisibilityConverter}}"
                                               ToolTip="{x:Static properties:Tooltips.TooltipRaceVariantIsPersistentIcon}"/>
                        </DockPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Toggle button for IsPersistent of current races variant -->
            <ToggleButton Margin="10,0,0,0" IsChecked="{Binding CurrentRacesVariantIsPersistent}" Style="{StaticResource PlainToggleButtonStyle}"
                          Visibility="{Binding AreRacesVariantsAvailable, Converter={StaticResource BooleanToVisibilityConverter}}"
                          ToolTip="{x:Static properties:Tooltips.TooltipRaceVariantIsPersistentToggleButton}">
                <controls:FontIcon FontSize="25">
                    <controls:FontIcon.Style>
                        <Style TargetType="{x:Type controls:FontIcon}">
                            <!-- Star empty -->
                            <Setter Property="Glyph" Value="&#xE734;"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentRacesVariantIsPersistent}" Value="True">
                                    <!-- Star filled -->
                                    <Setter Property="Glyph" Value="&#xE735;"/>
                                </DataTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <!-- Star filled -->
                                    <Setter Property="Glyph" Value="&#xE735;"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </controls:FontIcon.Style>
                </controls:FontIcon>
            </ToggleButton>

            <!-- Toggle button for KeepWhileRacesCalculation of current races variant -->
            <ToggleButton Margin="10,0,0,0" IsChecked="{Binding CurrentRacesVariant.KeepWhileRacesCalculation}"
                          ToolTip="{x:Static properties:Tooltips.TooltipRaceVariantKeepWhileCalculationToggleButton}">
                <ToggleButton.Style>
                    <Style TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource PlainToggleButtonStyle}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentRacesVariantIsPersistent}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding AreRacesVariantsAvailable}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ToggleButton.Style>
                <Grid>
                    <!--Pin empty-->
                    <controls:FontIcon FontSize="25" Glyph="&#xE840;"/>
                    <!--Fill for pin-->
                    <controls:FontIcon FontSize="25" Glyph="&#xE842;">
                        <controls:FontIcon.Style>
                            <Style TargetType="{x:Type controls:FontIcon}">
                                <Setter Property="Foreground" Value="Transparent"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentRacesVariant.KeepWhileRacesCalculation}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Text}"/>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Text}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </controls:FontIcon.Style>
                    </controls:FontIcon>
                </Grid>
            </ToggleButton>
        </StackPanel>

        <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
        <!-- View for current races variant -->
        <ListBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10" ItemsSource="{Binding CurrentRacesVariant.Races}"
                 dd:DragDrop.IsDragSource="True"
                 dd:DragDrop.IsDropTarget="True"
                 dd:DragDrop.UseDefaultDragAdorner="True"
                 BorderBrush="{StaticResource MahApps.Brushes.Gray3}" BorderThickness="1">
            <ListBox.ItemTemplate>
                <!-- Item template for the complete race row -->
                <DataTemplate>
                    <DockPanel LastChildFill="True">
                        <!-- Race ID -->
                        <TextBlock DockPanel.Dock="Left" Width="30" Margin="5,0" Text="{Binding RaceID, StringFormat=#{0}}" VerticalAlignment="Center" TextAlignment="Right" FontSize="{StaticResource MediumFontSize}"/>

                        <!-- Row header -->
                        <Border DockPanel.Dock="Left" Padding="7" Width="200" BorderBrush="{DynamicResource MahApps.Brushes.Gray3}" BorderThickness="1">
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsValid}" Value="False">
                                            <Setter Property="Background" Value="{StaticResource BrushErrorWithTransparency}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <DockPanel VerticalAlignment="Center" LastChildFill="False">
                                <!-- Distance and style for the race -->
                                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                                    <TextBlock Width="40" Text="{Binding Distance, StringFormat={}{0}m}" FontSize="{StaticResource MediumFontSize}" VerticalAlignment="Center"/>
                                    <ContentControl Content="{Binding Style}" Style="{StaticResource SwimmingStyleWithIconStyle}"/>
                                </StackPanel>
                                <!-- Error icons for the race -->
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                                    <!-- No starts available -->
                                    <controls:FontIcon FontSize="20" Glyph="&#xE75D;"
                                                       Visibility="{Binding IsValid_StartsAvailable, Converter={StaticResource InvertedBoolVisibilityConverter}}"
                                                       ToolTip="{x:Static properties:Resources.RaceEmptyString}"/>

                                    <!-- distances mismatch -->
                                    <Grid Visibility="{Binding IsValid_SameDistances, Converter={StaticResource InvertedBoolVisibilityConverter}}"
                                          ToolTip="{x:Static properties:Resources.RaceDistancesMismatchString}">
                                        <controls:FontIcon FontSize="20" Glyph="&#xECC6;"/>
                                        <controls:FontIcon FontSize="20" Glyph="&#xEA83;" Margin="3,5,0,0"/>
                                    </Grid>
                                    
                                    <!-- styles mismatch -->
                                    <controls:FontIcon FontSize="20" Glyph="&#xE7BA;" Margin="5,0,0,0"
                                                       Visibility="{Binding IsValid_SameStyles, Converter={StaticResource InvertedBoolVisibilityConverter}}"
                                                       ToolTip="{x:Static properties:Resources.RaceStylesMismatchString}"/>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                        <!-- List with all PersonStarts-->
                        <ListBox x:Name="InnerListBoxRace"
                                 ItemsSource="{Binding Starts}"                                 
                                 dd:DragDrop.IsDragSource="True"
                                 dd:DragDrop.IsDropTarget="True"
                                 dd:DragDrop.UseDefaultDragAdorner="True"
                                 dd:DragDrop.SelectDroppedItems="False"
                                 dd:DragDrop.UseDropTargetHint="True"
                                 dd:DragDrop.DropHandler="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Page}, Path=DataContext.DropAllowedHandlerObj}"
                                 dd:DragDrop.DropHintDataTemplate="{StaticResource DefaultDropHintTemplate}"
                                 PreviewMouseWheel="InnerListBoxRace_PreviewMouseWheel">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel IsItemsHost="True" Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <!-- Item template for one PersonStart -->
                                <DataTemplate>
                                    <Border Padding="7" Width="275" BorderBrush="{DynamicResource MahApps.Brushes.Accent}" BorderThickness="1">
                                        <Border.Style>
                                            <Style TargetType="{x:Type Border}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCompetitionObjAssigned}" Value="False">
                                                        <Setter Property="Background" Value="{StaticResource BrushErrorWithTransparency}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                        <Setter Property="Background" Value="{StaticResource BrushStartInactive}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource BrushHighlight}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Border.ToolTip>
                                            <TextBlock>
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}m {1}" FallbackValue="{x:Static properties:Resources.PersonStartCompetitionObjMissingString}">
                                                        <Binding Path="CompetitionObj.Distance" />
                                                        <Binding Path="CompetitionObj.SwimmingStyle" Converter="{StaticResource enumLocalizedStringConverter}" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Border.ToolTip>
                                        <DockPanel LastChildFill="True" Background="Transparent">  <!-- Background = Transparent seems to be important here to show the tooltip of the parent border correctly over empty space -->
                                            <!-- competition missing -->
                                            <controls:FontIcon DockPanel.Dock="Right" FontSize="20" Glyph="&#xF140;" Margin="5,0,0,0"
                                                               Visibility="{Binding IsCompetitionObjAssigned, Converter={StaticResource InvertedBoolVisibilityConverter}}"
                                                               ToolTip="{x:Static properties:Resources.PersonStartCompetitionObjMissingString}"/>
                                            
                                            <!-- Icon that is shown for all starts that use the max age competitions -->
                                            <Path DockPanel.Dock="Right" Data="{StaticResource Geometry_AccountTie}" Style="{StaticResource IconStyle}"
                                                  Visibility="{Binding IsUsingMaxAgeCompetition, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                  ToolTip="{x:Static properties:Tooltips.TooltipMaxAgeCompetition}"/>

                                            <!-- Icon to indicate if the start is inactive -->
                                            <controls:FontIcon DockPanel.Dock="Left" Glyph="&#xE7E8;"
                                                               Visibility="{Binding IsActive, Converter={StaticResource InvertedBoolVisibilityConverter}, FallbackValue=Collapsed}"
                                                               ToolTip="{x:Static properties:Tooltips.TooltipPersonInactiveStart}"/>

                                            <!-- Show the name of the person -->
                                            <TextBlock FontSize="{StaticResource MediumFontSize}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} {1}">
                                                        <Binding Path="PersonObj.FirstName" />
                                                        <Binding Path="PersonObj.Name" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
        <!-- List empty icon and warning for Parking lot -->
        <StackPanel Grid.Row="3" Grid.Column="2" Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="{x:Type StackPanel}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentRacesVariant.NotAssignedStarts.Count}" Value="0">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <controls:FontIcon FontSize="40" Glyph="&#xE9D5;" Foreground="{StaticResource MahApps.Brushes.Gray3}"/>
            <TextBlock Text="{x:Static properties:Resources.AllStartsAssignedString}" TextAlignment="Center" FontSize="{StaticResource MediumFontSize}" Foreground="{StaticResource MahApps.Brushes.Gray3}"/>
        </StackPanel>
        
        <!-- Parking lot for PersonStarts -->
        <ListBox Grid.Row="3" Grid.Column="2" Margin="10,10,0,10" ItemsSource="{Binding CurrentRacesVariant.NotAssignedStarts}"
                 dd:DragDrop.IsDragSource="True"
                 dd:DragDrop.IsDropTarget="True"
                 dd:DragDrop.UseDefaultDragAdorner="True"
                 dd:DragDrop.UseDropTargetHint="True"
                 dd:DragDrop.DropHandler="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Page}, Path=DataContext.DropAllowedHandlerParkingLotObj}"
                 BorderBrush="{StaticResource MahApps.Brushes.Gray3}" BorderThickness="1" Background="Transparent">
            <ListBox.ItemTemplate>
                <!-- Item template for the parking lot elements -->
                <DataTemplate>
                    <Border Padding="7" Width="150" BorderBrush="{DynamicResource MahApps.Brushes.Accent}" BorderThickness="1">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsCompetitionObjAssigned}" Value="False">
                                        <Setter Property="Background" Value="{StaticResource BrushErrorWithTransparency}" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource BrushHighlight}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <DockPanel LastChildFill="True">
                            <!-- Icon that is shown for all starts that use the max age competitions -->
                            <Path DockPanel.Dock="Right" Data="{StaticResource Geometry_AccountTie}" Style="{StaticResource IconStyle}"
                                   Visibility="{Binding IsUsingMaxAgeCompetition, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   ToolTip="{x:Static properties:Tooltips.TooltipMaxAgeCompetition}"/>

                            <StackPanel Orientation="Vertical">
                                <!-- Show the distance and style if a competition object is assigned -->
                                <TextBlock FontSize="{StaticResource MediumFontSize}" VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Visibility="{Binding IsCompetitionObjAssigned, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0}m {1}">
                                            <Binding Path="CompetitionObj.Distance" />
                                            <Binding Path="Style" Converter="{StaticResource enumLocalizedStringConverter}"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <!-- Show an error icon if no competition object is assigned -->
                                <controls:FontIcon FontSize="20" Glyph="&#xF140;" Margin="5,0,0,0"
                                               Visibility="{Binding IsCompetitionObjAssigned, Converter={StaticResource InvertedBoolVisibilityConverter}}">
                                    <controls:FontIcon.ToolTip>
                                        <ToolTip>
                                            <ToolTip.Content>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{x:Static properties:Resources.PersonStartCompetitionObjMissingString}"/>
                                                    <TextBlock Text="{Binding Style, Converter={StaticResource enumLocalizedStringConverter}}"/>
                                                </StackPanel>
                                            </ToolTip.Content>
                                        </ToolTip>
                                    </controls:FontIcon.ToolTip>
                                </controls:FontIcon>

                                <!-- Show the name of the person -->
                                <TextBlock FontSize="{StaticResource MediumFontSize}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="PersonObj.FirstName" />
                                            <Binding Path="PersonObj.Name" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
        <!-- Edit races variant and highlight controls-->
        <DockPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,10" LastChildFill="False">
            <!-- Add empty race button -->
            <Button DockPanel.Dock="Left" Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Command="{Binding AddNewRaceCommand}"
                    ToolTip="{x:Static properties:Tooltips.TooltipAddNewRaceToRaceVariant}">
                <StackPanel Orientation="Horizontal">
                    <controls:FontIcon FontSize="20" Glyph="&#xE710;"/>
                    <TextBlock Text="{x:Static properties:Resources.AddEmptyRaceString}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>

            <!-- Cleanup races button -->
            <Button DockPanel.Dock="Left" Margin="10,0,0,0" Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Command="{Binding CleanupRacesCommand}"
                    ToolTip="{x:Static properties:Tooltips.TooltipCleanupRaces}">
                <StackPanel Orientation="Horizontal">
                    <controls:FontIcon FontSize="20" Glyph="&#xEA99;"/>
                    <TextBlock Text="{x:Static properties:Resources.CleanupRacesString}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
            </Button>

            <!-- Highlight mode controls -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <TextBlock Text="{x:Static properties:Resources.HighlightModeString}" VerticalAlignment="Center"/>
                <!-- Selection for highlight mode -->
                <ComboBox Margin="5,0,0,0" Width="150" ItemsSource="{Binding Source={StaticResource AvailableHighlightPersonStartModes}}" SelectedValue="{Binding HighlightPersonStartMode}" VerticalAlignment="Center">
                    <!-- https://www.codeproject.com/Articles/767834/WPF-Binding-to-an-enum-with-localization -->
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource enumLocalizedStringConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Selection for swimming style. This is only visible if highlight mode is SwimmingStyle. -->
                <ComboBox Margin="5,0,0,0" Width="250" VerticalAlignment="Center" ItemsSource="{Binding AvailableSwimmingStyles}" SelectedItem="{Binding HighlightedSwimmingStyle}">
                    <ComboBox.Style>
                        <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource MahApps.Styles.ComboBox}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HighlightPersonStartMode}" Value="SwimmingStyle">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding}" Style="{StaticResource SwimmingStyleWithIconStyle}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Selection for gender. This combobox uses localization. This is only visible if highlight mode is Gender. -->
                <ComboBox Margin="5,0,0,0" Width="250" VerticalAlignment="Center" ItemsSource="{Binding Source={StaticResource AvailableGenders}}" SelectedItem="{Binding HighlightedGender}">
                    <ComboBox.Style>
                        <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource MahApps.Styles.ComboBox}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HighlightPersonStartMode}" Value="Gender">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <ContentControl Content="{Binding}" Style="{StaticResource GenderWithIconStyle}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Selection / Numeric input for distance. This is only visible if highlight mode is Distance. -->
                <controls:NumericUpDown Margin="5,0,0,0" Width="250" VerticalAlignment="Center"
                                        Value="{Binding HighlightedDistance}" Minimum="0">
                    <controls:NumericUpDown.Style>
                        <Style TargetType="{x:Type controls:NumericUpDown}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HighlightPersonStartMode}" Value="Distance">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </controls:NumericUpDown.Style>
                </controls:NumericUpDown>

                <!-- Selection for highlighted person. This is only visible if highlight mode is Person. -->
                <ComboBox Margin="5,0,0,0" Width="250" VerticalAlignment="Center"
                          ItemsSource="{Binding AvailablePersons}" SelectedItem="{Binding HighlightedPerson}">
                    <ComboBox.Style>
                        <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource MahApps.Styles.ComboBox}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HighlightPersonStartMode}" Value="Person">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
                
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
