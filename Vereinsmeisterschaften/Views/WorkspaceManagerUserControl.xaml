<UserControl x:Class="Vereinsmeisterschaften.Views.WorkspaceManagerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vereinsmeisterschaften.Views"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:properties="clr-namespace:Vereinsmeisterschaften.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MahApps.Styles.Button.Square.Accent}">
            <Setter Property="Margin" Value="{StaticResource SmallLeftTopRightBottomMargin}"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSidebar, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" Value="True">
                    <Setter Property="Width" Value="250"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" FontSize="{StaticResource LargeFontSize}" VerticalAlignment="Center" Margin="{StaticResource SmallTopBottomMargin}">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Text" Value="{Binding CurrentWorkspaceFolder}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasUnsavedChanges}" Value="True">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontStyle" Value="Italic"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CurrentWorkspaceFolder}" Value="">
                            <Setter Property="Text" Value="{x:Static properties:Resources.NoWorkspaceString}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        
        <!-- Workspace edit buttons and workspace path -->
        <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left">
            <StackPanel.Style>
                <Style TargetType="{x:Type StackPanel}">
                    <Setter Property="Orientation" Value="Horizontal"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSidebar, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" Value="True">
                            <Setter Property="Orientation" Value="Vertical"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            
            <Button Command="{Binding LoadWorkspaceCommand}" Margin="{StaticResource SmallLeftTopRightBottomMargin}" ToolTip="{x:Static properties:Tooltips.TooltipWorkspaceOpen}">
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <Setter Property="Orientation" Value="Vertical"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSidebar, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Orientation" Value="Horizontal"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <controls:FontIcon FontSize="50" Glyph="&#xED25;" Margin="10"/>
                    <TextBlock Text="{x:Static properties:Resources.OpenString}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{StaticResource MediumFontSize}"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding OpenWorkspaceFolderCommand}" Margin="{StaticResource SmallLeftTopRightBottomMargin}" ToolTip="{x:Static properties:Tooltips.TooltipWorkspaceOpenInExplorer}">
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <Setter Property="Orientation" Value="Vertical"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSidebar, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Orientation" Value="Horizontal"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <controls:FontIcon FontSize="50" Glyph="&#xED25;" Margin="10"/>
                    <TextBlock Text="{x:Static properties:Resources.OpenInExplorerString}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{StaticResource MediumFontSize}"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding SaveWorkspaceCommand}" Margin="{StaticResource SmallLeftTopRightBottomMargin}" ToolTip="{x:Static properties:Tooltips.TooltipWorkspaceSave}">
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <Setter Property="Orientation" Value="Vertical"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSidebar, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Orientation" Value="Horizontal"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <controls:FontIcon FontSize="50" Glyph="&#xE74E;" Margin="10"/>
                    <TextBlock Text="{x:Static properties:Resources.SaveString}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{StaticResource MediumFontSize}"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding CloseWorkspaceCommand}" Margin="{StaticResource SmallLeftTopRightBottomMargin}" ToolTip="{x:Static properties:Tooltips.TooltipWorkspaceClose}">
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <Setter Property="Orientation" Value="Vertical"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSidebar, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Orientation" Value="Horizontal"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <controls:FontIcon FontSize="50" Glyph="&#xE8BB;" Margin="10"/>
                    <TextBlock Text="{x:Static properties:Resources.CloseString}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{StaticResource MediumFontSize}"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Last workspace paths -->
        <GroupBox Grid.Row="2">
            <GroupBox.Header>
                <DockPanel LastChildFill="False">
                    <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" Text="{x:Static properties:Resources.LastWorkspacePathsString}"/>
                    <Button DockPanel.Dock="Right" Margin="0" Width="Auto" Background="{DynamicResource BrushError}"
                            Content="{x:Static properties:Resources.ClearListString}"
                            controls:ControlsHelper.ContentCharacterCasing="Normal"
                            Command="{Binding ClearAllLastWorkspacePathsCommand}"/>
                </DockPanel>
            </GroupBox.Header>
            <ListBox ItemsSource="{Binding LastWorkspacePaths}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel LastChildFill="True">
                            <Button DockPanel.Dock="Right" Margin="5" HorizontalContentAlignment="Center" Width="Auto"
                                    Command="{Binding DataContext.LoadLastWorkspaceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    ToolTip="{x:Static properties:Resources.OpenString}">
                                <controls:FontIcon Glyph="&#xED25;" Margin="2"/>
                            </Button>
                            <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
    </Grid>
</UserControl>
