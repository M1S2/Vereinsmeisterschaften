<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:userControls="clr-namespace:Vereinsmeisterschaften.Controls">
    
    <DataTemplate x:Key="NumericEditorTemplate">
        <controls:NumericUpDown HorizontalAlignment="Right" MinWidth="200"
                                Value="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Minimum="{Binding MinValue}" Maximum="{Binding MaxValue}"/>
    </DataTemplate>

    <DataTemplate x:Key="StringEditorTemplate">
        <TextBox VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="0,3"
                 Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </DataTemplate>

    <DataTemplate x:Key="EnumEditorTemplate">
        <ComboBox VerticalAlignment="Center"
                  ItemsSource="{Binding ValueType, Converter={StaticResource enumValuesConverter}}"
                  SelectedValue="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <!--https://www.codeproject.com/Articles/767834/WPF-Binding-to-an-enum-with-localization-->
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource enumLocalizedStringConverter}}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </DataTemplate>

    <DataTemplate x:Key="FileRelativeEditorTemplate">
        <userControls:FileFolderPathControl VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="{StaticResource MediumFontSize}" Margin="0,3"
                                            RootFolderForRelativePaths="{Binding DataContext.CurrentWorkspaceFolder, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Page}}"
                                            FileFolderPath="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                            FileFolderSelectionMode="Files"/>
    </DataTemplate>

    <DataTemplate x:Key="FileAbsoluteEditorTemplate">
        <userControls:FileFolderPathControl VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="{StaticResource MediumFontSize}" Margin="0,3"
                                            FileFolderPath="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                            FileFolderSelectionMode="Files"/>
    </DataTemplate>

    <DataTemplate x:Key="FileDocxRelativeEditorTemplate">
        <userControls:FileFolderPathControl VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="{StaticResource MediumFontSize}" Margin="0,3"
                                            RootFolderForRelativePaths="{Binding DataContext.CurrentWorkspaceFolder, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Page}}"
                                            FileFolderPath="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                            FileFolderSelectionMode="Files"
                                            OpenFileDialogFilter="Docx files (*.docx)|*.docx"/>
    </DataTemplate>

    <DataTemplate x:Key="FileDocxAbsoluteEditorTemplate">
        <userControls:FileFolderPathControl VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="{StaticResource MediumFontSize}" Margin="0,3"
                                            FileFolderPath="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                            FileFolderSelectionMode="Files" 
                                            OpenFileDialogFilter="Docx files (*.docx)|*.docx"/>
    </DataTemplate>
        
    <DataTemplate x:Key="FolderRelativeEditorTemplate">
        <userControls:FileFolderPathControl VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="{StaticResource MediumFontSize}" Margin="0,3"
                                            RootFolderForRelativePaths="{Binding DataContext.CurrentWorkspaceFolder, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Page}}"
                                            FileFolderPath="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                            FileFolderSelectionMode="Folders"/>
    </DataTemplate>

    <DataTemplate x:Key="FolderAbsoluteEditorTemplate">
        <userControls:FileFolderPathControl VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="{StaticResource MediumFontSize}" Margin="0,3"
                                            FileFolderPath="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                                            FileFolderSelectionMode="Folders"/>
    </DataTemplate>

    <DataTemplate x:Key="BooleanEditorTemplate">
        <CheckBox IsChecked="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </DataTemplate>
</ResourceDictionary>