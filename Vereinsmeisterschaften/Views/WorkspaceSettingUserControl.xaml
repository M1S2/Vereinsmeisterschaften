<UserControl x:Class="Vereinsmeisterschaften.Views.WorkspaceSettingUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:Vereinsmeisterschaften.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="250">

    <DockPanel ToolTip="{Binding Tooltip}">
        <controls:FontIcon DockPanel.Dock="Left" Margin="5,5,0,5"
                           FontSize="30" Glyph="{Binding Icon}"/>

        <ContentControl DockPanel.Dock="Right" Width="150" 
                        Content="{Binding}" ContentTemplate="{Binding EditorTemplate}" />

        <Button DockPanel.Dock="Right" VerticalAlignment="Center" Margin="10,0,0,0" 
                Visibility="{Binding HasDefaultValue, Converter={StaticResource InvertedBoolVisibilityConverter}}"
                Command="{Binding SetToDefaultCommand}"
                Style="{StaticResource StyleDefaultSettingsButton}"/>
        
        <Button DockPanel.Dock="Right" VerticalAlignment="Center"
                Visibility="{Binding HasChanged, Converter={StaticResource BooleanToVisibilityConverter}}"
                Command="{Binding ResetCommand}" 
                Style="{StaticResource StyleResetSettingsButton}"/>

        <TextBlock DockPanel.Dock="Left" Margin="10,0,10,0" VerticalAlignment="Center"
                   Text="{Binding Label}" FontSize="{StaticResource MediumFontSize}"/>
    </DockPanel>
</UserControl>
